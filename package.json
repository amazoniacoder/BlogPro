{
  "name": "blogpro",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development tsx --watch server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "check:localhost": "grep -r \"localhost\" client/dist/ || echo 'âœ… No localhost found in client build'",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "eslint server --ext .ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx server/db/migrations/migrate.ts",
    "db:seed": "tsx server/db/seeds/seed.ts",
    "clean": "rimraf node_modules/.vite dist client/dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:report": "node scripts/test-reporter.js",
    "test:comprehensive": "node scripts/test-reporter.js",
    "test:quick-report": "node scripts/quick-report.js",
    "test:check-server": "node scripts/check-server.js",
    "test:texteditor:coverage": "cd client/src/plugins/texteditor && npm run test:coverage",
    "test:texteditor": "cd client/src/plugins/texteditor && npm test",
    "test:texteditor:watch": "cd client/src/plugins/texteditor && npm run test:watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --exit-zero-on-changes",
    "analyze": "npm run build:client && npx vite-bundle-analyzer dist/stats.html",
    "build:analyze": "vite build --mode analyze",
    "ssl:generate": "node scripts/generate-ssl.js"
  },
