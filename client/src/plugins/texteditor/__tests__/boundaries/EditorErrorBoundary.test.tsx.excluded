/**
 * EditorErrorBoundary tests
 */
// @ts-ignore: React is used for JSX
import React from 'react';
import { render, screen } from '@testing-library/react';
import { EditorErrorBoundary } from '../../core/components/boundaries/EditorErrorBoundary';

declare global {
  var describe: any;
  var test: any;
  var expect: any;
  var beforeEach: any;
  var vi: any;
}

const ThrowError = ({ shouldThrow }: { shouldThrow: boolean }) => {
  if (shouldThrow) {
    throw new Error('Test error');
  }
  return <div>No error</div>;
};

describe('EditorErrorBoundary', () => {
  const mockOnError = vi.fn();

  beforeEach(() => {
    vi.clearAllMocks();
    // Suppress console.error for these tests
    vi.spyOn(console, 'error').mockImplementation(() => {});
  });

  test('should render children when no error', () => {
    render(
      <EditorErrorBoundary onError={mockOnError}>
        <ThrowError shouldThrow={false} />
      </EditorErrorBoundary>
    );

    expect(screen.getByText('No error')).toBeInTheDocument();
  });

  test('should catch and display error', () => {
    render(
      <EditorErrorBoundary onError={mockOnError}>
        <ThrowError shouldThrow={true} />
      </EditorErrorBoundary>
    );

    expect(screen.getByText(/Something went wrong/)).toBeInTheDocument();
    expect(mockOnError).toHaveBeenCalledWith(expect.any(Error), expect.any(Object));
  });

  test('should provide reset functionality', () => {
    const { rerender } = render(
      <EditorErrorBoundary onError={mockOnError}>
        <ThrowError shouldThrow={true} />
      </EditorErrorBoundary>
    );

    expect(screen.getByText(/Something went wrong/)).toBeInTheDocument();

    // Reset by re-rendering with no error
    rerender(
      <EditorErrorBoundary onError={mockOnError}>
        <ThrowError shouldThrow={false} />
      </EditorErrorBoundary>
    );

    expect(screen.getByText('No error')).toBeInTheDocument();
  });
});